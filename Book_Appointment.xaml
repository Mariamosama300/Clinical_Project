<Window x:Class="Software_Project.Book_Appointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Appointment" Height="300" Width="400">

    <Grid Background="#FF3D3D3D">
        <Label Content="Medical Record Number:" Foreground="White" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMedicalRecord" HorizontalAlignment="Left" Margin="150,10,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Appointment Date:" Foreground="White" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpAppointmentDate" HorizontalAlignment="Left" Margin="150,50,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Book Appointment" Background="#FF4CAF50" Foreground="White" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="150" Click="BookAppointment_Click"/>

        <!-- Button to navigate back to Reception window -->
        <Button Content="Back to Reception" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="150" Background="#FF5D7599" Foreground="#FFF9F5F5" FontFamily="Segoe UI Semibold" Click="BackToReception_Click"/>
    </Grid>
</Window>
