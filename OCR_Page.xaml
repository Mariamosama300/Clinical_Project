<Window x:Class="Software_Project.OCR_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Project"
        mc:Ignorable="d"
        Title="OCR Application" Height="450" Width="800">
    <Grid>
        <!-- Back Button -->
        <Button x:Name="backButton" Content="Back to Reception" Click="BackToReception_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,10,0,0"/>

        <!-- Pick Image and Perform OCR Buttons -->
        <Button x:Name="pickImageButton" Content="Pick Image" Click="PickImageButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,46,0,0"/>
        <Button x:Name="performOcrButton" Content="Perform OCR" Click="PerformOcrButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,46,0,0"/>

        <!-- OCR Text Output -->
        <TextBlock x:Name="ocrTextBlock" Text="" Margin="240,51,41,89"/>

        <!-- Image Display -->
        <Image x:Name="imageControl" HorizontalAlignment="Left" Height="322" Margin="10,80,0,0" VerticalAlignment="Top" Width="210"/>
    </Grid>
</Window>
